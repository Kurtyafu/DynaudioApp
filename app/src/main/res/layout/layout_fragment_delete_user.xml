<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="64dp"
                    android:layout_height="44dp"
                    android:scaleType="center"
                    android:src="@mipmap/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="账号注销"
                    android:textColor="@color/white_alpha_80"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="72dp"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@mipmap/ic_warning" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:includeFontPadding="false"
                        android:text="重要通知"
                        android:textColor="@color/white"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="注销后，您的账号将无法使用，且您的资产/信息将被删除"
                    android:textColor="@color/white_alpha_80"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="1.所有账号信息将自动清除"
                    android:textColor="@color/white_alpha_80"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lineHeight="22dp"
                    android:text="账号一旦注销成功，当前账号登录的应用将自动清除所有信息(如您的头像、昵称、收藏的\n音频内容及累积的听歌时⻓等)，此账号将无法使用，请知悉并谨慎操作。"
                    android:textColor="@color/white_alpha_45"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="2.账号将不可找回"
                    android:textColor="@color/white_alpha_80"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lineHeight="22dp"
                    android:text="账号注销后，您将无法使用该账号登录丹拿之声及使用相关服务。以相同手机号、微信再\n次向我们申请注册丹拿之声账号，此时该账号将默认为新账号。"
                    android:textColor="@color/white_alpha_45"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="3.个人权益将被删除"
                    android:textColor="@color/white_alpha_80"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lineHeight="22dp"
                    android:text="账号内未到期的会员类权益及其他已产生但未消耗完毕的权益将被删除。"
                    android:textColor="@color/white_alpha_45"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/ll_read_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="65dp"
                    android:gravity="center">

                    <View
                        android:id="@+id/view_radio_btn"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/select_radio_button" />

                    <TextView
                        android:id="@+id/txt_phone_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        android:text="已阅读并同意"
                        android:textColor="@color/white_alpha_45"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txt_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="《丹拿之声账号注销协议》"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_next"
                    android:layout_width="242dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="21dp"
                    android:background="@drawable/select_button"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@drawable/select_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="387dp"
                    android:background="@color/dark_item"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请告诉我们注销原因，帮助我们做得更好"
                        android:textColor="@color/white_alpha_80"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ll_radio_btn_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/view_radio_btn_1"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/select_radio_button" />

                        <TextView
                            android:id="@+id/txt_content_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="23dp"
                            android:text="误注册了多个账号，想把手机号/微信号释放"
                            android:textColor="@color/white_alpha_80"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_radio_btn_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/view_radio_btn_2"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/select_radio_button" />

                        <TextView
                            android:id="@+id/txt_content_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="23dp"
                            android:text="担心我的收藏、播放记录等功能泄露隐私"
                            android:textColor="@color/white_alpha_80"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_radio_btn_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/view_radio_btn_3"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/select_radio_button" />

                        <TextView
                            android:id="@+id/txt_content_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="23dp"
                            android:text="感觉丹拿之声不好用，准备切换到其他平台"
                            android:textColor="@color/white_alpha_80"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_radio_btn_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/view_radio_btn_4"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/select_radio_button" />

                        <TextView
                            android:id="@+id/txt_content_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="23dp"
                            android:text="其他原因"
                            android:textColor="@color/white_alpha_80"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@color/white_alpha_5"
                        android:gravity="top"
                        android:hint="请填写您的注销原因"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:textColorHint="@color/white_alpha_45"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_apply"
                    android:layout_width="242dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="144dp"
                    android:background="@drawable/select_button"
                    android:gravity="center"
                    android:text="申请注销"
                    android:textColor="@drawable/select_text"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</layout>