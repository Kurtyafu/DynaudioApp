<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="40dp">

    <RelativeLayout
        android:id="@+id/rl_music_tab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Item1"
            android:textColor="@drawable/select_text_tab"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_music_tab"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="#CF022D" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_audio_program_tab"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp">

        <TextView
            android:id="@+id/txt_audio_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Item2"
            android:textColor="@drawable/select_text_tab"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_audio_program_tab"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#CF022D" />

    </RelativeLayout>

</LinearLayout>